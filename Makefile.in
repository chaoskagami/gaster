SHELL = /bin/sh
top_srcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

.SUFFIXES:
.SUFFIXES: .c .o

OPT=-g -O0

AR = ar
AR_FLAGS = rc
RANLIB = @RANLIB@

CC = @CC@
CFLAGS = -I. @CFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
INSTALL = @INSTALL@
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = $(exec_prefix)/bin
libdir = $(prefix)/lib
infodir = $(prefix)/info

SOURCES=blib.c gaster_main.c gaster_unpack.c gaster_asm.c
# DOCS=libbinmod.texi binmod.info
MISC=configure mkinstalldirs install-sh aclocal.m4
LIB_OBJS=blib.o gaster_main.o gaster_unpack.o gaster_asm.o

# ??? replace with your targets
all: gaster

# ??? here I make the bindir, libdir and infodir directories; you
# might not need all of these.  also, I assumed the names PROG and
# libMYPROG.a for the program and library.
install: all
	$(top_srcdir)/mkinstalldirs $(bindir)
	$(top_srcdir)/mkinstalldirs $(libdir)
	$(top_srcdir)/mkinstalldirs $(infodir)
	$(INSTALL) gaster $(bindir)/gaster
#	$(INSTALL) PROG.info $(infodir)/PROG.info

uninstall:
	/bin/rm -f $(bindir)/gaster

gaster: $(LIB_OBJS)
	$(CC) $(CFLAGS) -o gaster $(LIB_OBJS)

clean:
	/bin/rm -f core *.o bxxd bips bgrep bsed libbinmod.a

distclean: clean
	/bin/rm -f Makefile config.h config.status config.cache config.log

squeakyclean: distclean
	/bin/rm -fr autom4te.cache configure

mostlyclean: clean

maintainer-clean: clean

#PROG.info: PROG.texi
#	makeinfo PROG.texi
